[Unit]
Description={{ ya_requestor_name }} ya-requestor yagna
After=network.target

[Service]
Type=notify
WorkingDirectory={{ ya_requestor_dir }}
ExecStart={{ ya_requestor_dir }}/run_yagna.sh
TimeoutStartSec=10m
LimitNOFILE={{ ya_requestor_descriptor_files_max }}
Restart=always
MemoryHigh={{ ya_requestor_mem_high }}
MemoryMax={{ ya_requestor_mem_max }}
ExecStartPost={{ ya_requestor_dir }}/fix_payment_initialization.sh

[Install]
WantedBy=default.target
